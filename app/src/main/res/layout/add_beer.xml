<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="30dp">


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_name"
            android:textCursorDrawable="@null"
            style="@style/SecondaryText"
            android:textColorHint="#c4c6c4"
            android:id="@+id/new_beer_name"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:background="@drawable/edit_text_style"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:hint="@string/add_description"
            android:textCursorDrawable="@null"
            style="@style/SecondaryText"
            android:textColorHint="#c4c6c4"
            android:inputType="textMultiLine"
            android:gravity="top|left"
            android:id="@+id/new_beer_description"
            android:layout_below="@+id/new_beer_name"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:background="@drawable/edit_text_style"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/new_beer_button"
            android:layout_below="@id/new_beer_description"
            android:layout_margin="10dp"
            android:background="@color/primary"
            android:text="Dodaj zdjÄ™cie"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:id="@+id/new_beer_photo"
            android:layout_below="@+id/new_beer_button"
            android:layout_margin="10dp"/>


    </RelativeLayout>

</ScrollView>